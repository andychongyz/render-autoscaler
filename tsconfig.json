{
  "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "outDir": "dist",
      "sourceMap": true
  },
  "include": ["src", "config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}